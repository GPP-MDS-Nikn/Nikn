<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @forum_post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @forum_post.content %>
</p>

<% if ong_signed_in? and current_ong.has_role? :admin %>
	<%= link_to 'Editar', edit_forum_post_path(@forum_post) %> |
	<%= link_to 'Apagar', forum_post_path(@forum_post), method: :delete, data: { confirm: 'Deseja apagar o post?' } %>
<% end %>

<%= link_to 'Voltar', forum_posts_path %>
