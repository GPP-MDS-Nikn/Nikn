<!--This will link the index page to the 'new' page -->
<%= link_to 'New Ong', "ongs/new" %>
<ul>
<% @ong.each do |ong| %>
	<li><%= ong.name %>
	<!--This will link to the Edit page, passing the current ong ID to the action Edit on controller -->
	<%= link_to "Edit", {:action => 'edit', :id => ong.id}, :class => 'action edit' %>
	<%= link_to "Show", {:action => 'show', :id => ong.id}, :class => 'action show' %>
	<%= link_to "Delete", ong, method: :delete, data: { confirm: "You sure?" } %>
</li>
<% end %>
</ul>