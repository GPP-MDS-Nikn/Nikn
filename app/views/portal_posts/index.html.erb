<p id="notice"><%= notice %></p>

<h1>Portal de Informações</h1>

<div class="portal_posts">
	<div class="container">	

		<% @portal_posts.each do |post| %> 
		  <div class="portal_post">
		  	<p class="title"><%= post.title %></p>
		  	<p class="subtitle"><%= post.created_at %>, por <%= post.author %> -</p>
		  	<p class="body"><%= post.body %></p>
		  </div>
		<% end %>
		
		<%= link_to 'Nova Postagem', "new" %>
	
	</div>
</div>