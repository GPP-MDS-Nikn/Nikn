<% provide(:title, 'New event') %>
<h1>Novo evento</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@event) do |field| %>
			<%= field.label :name %>
			<%= field.text_field :name %>

			<%= field.label :local %>
			<%= field.text_field :local %>

			<%= field.label :date %>
			<%= field.datetime_field :date %>

			<%= field.label :description %>
			<%= field.text_field :description %>

			<%= field.submit "Criar novo evento", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>