<% provide(:title, 'New event') %>
<h1>Novo evento</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@event) do |field| %>

			<!-- This is necessary to display wrong inputs messages -->
			<%= render 'shared/error_messages' %>

			<%= field.label :name %>
			<%= field.text_field :name, class: 'form-control' %>

			<%= field.label :local %>
			<%= field.text_field :local, class: 'form-control' %>

			<%= field.label :date %>
			<%= field.datetime_field :date, class: 'form-control' %>

			<%= field.label :description %>
			<%= field.text_field :description, class: 'form-control' %>

			<%= field.submit "Criar novo evento", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>