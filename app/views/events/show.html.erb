<% provide(:title, "| Editar Evento") %>

</br><%= link_to 'Voltar', events_path %></br>

<div class="row">
	<aside class="col-md-4">
		<section class="event_info">
			<h1>
				<div>
					<%if @event.image_file.present? %>
						<%= image_tag @event.image_file.url(:medium) %>
					<%else%>
						<%= image_tag("nikn_default_banner.png")  %>
					<%end%>
					<div class="btn-group pull-right" role="group" aria-label="...">
						<%= link_to(edit_event_path(@event), type: "button", class: "btn btn-default") do %>
							<span class="glyphicon glyphicon-pencil portal-button" aria-hidden="true"></span>
						<% end %>
						<%= link_to(@event, method: :delete, data: { confirm: 'Deseja realmente excluir esta postagem?' }, type: "button", class: "btn btn-default", :disabled => true) do %>					
							<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
						<% end %>
					</div>
				</div>
				<%= @event.name %><br>
				<%= @event.local %><br>
				<%= @event.description %><br>
				<%= @event.date %><br>
			</h1>
		</section>
	</aside>
</div>