			<td class="data">0.00</td>
			<td class="data">0.00</td>
			<td class="data">33.2</td>
		</tr>

		<!-- CENTRO-OESTE -->
		<tr nowrap bgcolor="#DDDDDD">
			<td class="dir">Centro-Oeste</td>
			<td class="data">12.2</td>
