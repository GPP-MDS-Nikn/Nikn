<p id="notice"><%= notice %></p>

<!-- Render basic configuration of the mortality rate chart -->
<!-- This sintax is necessary to render javascript when the request comes from a link -->
<%= render(:partial =>'mortality_rate_chart', :format => :js) %>

<!-- Top title of the page -->
<h1>Lista de mortalidade das 5 regiões do Brasil</h1>

<!-- Place where is displayed the mortality rate chart -->
<div id="container" style="min-width: 420px; max-width: 600px; height: 400px; margin: 0 auto"></div>


<!-- Here, we put all available data in repective 'tr' container to display in the chart view -->
<div style="display:none">

	<table id="freq" border="0" cellspacing="0" cellpadding="0">

		<!-- This 'tr' won't be displayed -->
		<tr nowrap bgcolor="#CCCCFF">
			<th colspan="9" class="hdr">Gráfico de Mortalidade</th> 
		</tr>

		<!-- This is the subtitles of the chart -->
		<tr nowrap bgcolor="#CCCCFF">
			<!-- Here, the first 'th' will never be displayed -->
      <th class="freq">Taxas</th>
			<th class="freq">&lt; 8 %</th>
			<th class="freq">8-10 %</th>
			<th class="freq">10-12 %</th>
			<th class="freq">12-15 %</th>
			<th class="freq">15-20 %</th>
			<th class="freq">&gt; 20 %</th>
		</tr>

		<!-- Begginig in this section, all the rate data of each region
		should be displayed in the respective block. -->

		<!-- NORTE -->
		<tr nowrap>
			<td class="dir">Norte</td>
			<%= @north_mortality_rates_frequencies.each do |each_north_mortality_rate_frequency| %>
				<th class="data"><%= each_north_mortality_rate_frequency %></th>
			<% end %>
		</tr>

		<!-- NORDESTE -->
		<tr nowrap>
			<td class="dir">Nordeste</td>
			<%= @northeast_mortality_rates_frequencies.each do |each_northeast_mortality_rate_frequency| %>
				<th class="data"><%= each_northeast_mortality_rate_frequency %></th>
			<% end %>
		</tr>

		<!-- SUDESTE -->
		<tr nowrap bgcolor="#DDDDDD">
			<td class="dir">Sudoeste</td>
			<%= @southeast_mortality_rates_frequencies.each do |each_southeast_mortality_rate_frequency| %>
				<th class="data"><%= each_southeast_mortality_rate_frequency %></th>
			<% end %>
		</tr>

		<!-- SUL -->
		<tr nowrap>
			<td class="dir">Sul</td>
			<%= @south_mortality_rates_frequencies.each do |each_south_mortality_rate_frequency| %>
				<th class="data"><%= each_south_mortality_rate_frequency %></th>
			<% end %>
		</tr>

		<!-- CENTRO-OESTE -->
		<tr nowrap bgcolor="#DDDDDD">
			<td class="dir">Centro-Oeste</td>
			<%= @centerwest_mortality_rates_frequencies.each do |each_centerwest_mortality_rate_frequency| %>
				<th class="data"><%= each_centerwest_mortality_rate_frequency %></th>
			<% end %>
		</tr>
	</table>
</div>
<br>

<%= link_to 'New Mortality rate', new_mortality_rate_path %>
