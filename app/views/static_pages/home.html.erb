<div class="col-lg-12 text-center">
	<div id="carousel-example-generic" class="carousel slide">
		<!-- Indicators -->
		<ol class="carousel-indicators hidden-xs">
			<li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
			<li data-target="#carousel-example-generic" data-slide-to="1"></li>
			<li data-target="#carousel-example-generic" data-slide-to="2"></li>
		</ol>

		<!-- Wrapper for slides -->
		<div class="carousel-inner">
			<div class="item active">
				<img class="img-responsive img-full" <%= image_tag("image1.jpg") %> >
			</div>
			<div class="item">
				<img class="img-responsive img-full"<%= image_tag("image2.jpeg")%> >
			</div>
			<div class="item">
				<img class="img-responsive img-full" <%= image_tag("slide-1.jpg")%> >
			</div>
		</div>

		<!-- Controls -->
		<a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
				<span class="icon-prev"></span>
		</a>
		<a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
				<span class="icon-next"></span>
		</a>
	</div>
	<h2 class="brand-before">Bem vindo à</h2>
	<h1 class="brand-name">NIKN</h1>
	<hr class="tagline-divider">
	<h2>
		<strong>Auxílio às mulheres vítimas de violência</strong>
	</h2>
</div>

<div class = "center jumbotron">
		<a href="/events" class="btn btn-lg btn-primary">Acompanhe nossos eventos!</a>
</div>

<div class="col-lg-12">
		<hr>
		<h2 class="intro-text text-center">Alguma informação a mais
				<strong>worth visiting</strong>
		</h2>
</div>


<div class="col-lg-12">
		<hr>
		<h2 class="intro-text text-center">Calendário de
				<strong>Eventos</strong>
		</h2>
		<hr>
		<%= render 'layouts/fullcalendar_setup' %>
</div>
