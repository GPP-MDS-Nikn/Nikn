<section id="title" class="emerald">
	<div class="container">
		<div class="row">
			<div class="col-sm-6">
				<h1>Espaço para as ONGs</h1>
				<p> Cadastre sua ONG e participe da luta pelo fim da violência contra à mulher por aqui também! 
				As ONGs podem publicar eventos, são identificadas nos fóruns e ainda aparecem no nosso mapa.</p>
			</div>
		</div>
	</div>
</section>

<section id="portfolio" class="container">
	<h2>Cadastre sua ONG</h2>
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<%= devise_error_messages! %>
			<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
				<div>
					<h3>Informações Básicas</h3>
					<div class="field">
						<p>* <b>Email</b></p>
						<%= f.email_field :email, autofocus: true, class: 'form-control' %>
					</div>
					<div class="field">
						<p>* <b>Senha</b> 
						<% if @minimum_password_length %>
							<em>(mínimo <%= @minimum_password_length %> caracteres)</em>
						<% end %></p>
						<%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
					</div>
					<div class="field">
						<p>* <b>Confirmação de senha</b></p>
						<%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
					</div>
					<div class="field">
						<p>* <b>Nome</b></p>
						<%= f.text_field :name, class: 'form-control' %>
					</div>
					<div class="field">
						<p>* <b>Descrição</b></p>
						<%= f.text_area :description, class: 'form-control' %>
					</div>
					<div class="field">
						<p><b>Adicione uma imagem à sua ONG</b></p>
						<%= f.file_field :image_file %>
					</div>
				</div>

				<div>
					<h3>Detalhes para contato</h3>
					<div class="field">
						<p><b>Site</b></p>
						<%= f.text_field :site, class: 'form-control' %>
					</div>
					<div class="field">
						<p>* <b>Telefone principal</b></p>
						<%= f.text_field :phone, class: 'form-control' %>
					</div>
					<div class="field">
						<p><b>Telefone alternativo</b></p>
						<%= f.text_field :auxiliary_phone, class: 'form-control' %>
					</div>
				</div>

				<div>
					<h3>Localização</h3>
					<div class="field">
						<p>* <b>CEP</b></p>
						<%= f.text_field :cep, class: 'form-control' %>
					</div>
					<div class="field">
						<p>* <b>Endereço</b></p>
						<%= f.text_field :address, class: 'form-control' %>
					</div>
					<div class="field">
						<p><b>Complemento</b></p>
						<%= f.text_field :complement, class: 'form-control' %>
					</div>
					<div class="field">
						<p>* <b>UF</b></p>
						<%= f.text_field :uf, class: 'form-control' %>
					</div>
					<div class="field">
						<p>* <b>Cidade</b></p>
						<%= f.text_field :city, class: 'form-control' %>
					</div>
				</div>

				<br />
				<div class="actions text-center">
					<%= f.submit "Cadastrar", class: "btn btn-primary" %>
				</div>
				<p><em>(*) Campos obrigatórios.</em></p>
			<% end %>
		</div>
	</div>
</section><!--/#portfolio-->
