<section id="title" class="emerald">
	<div class="container">
		<div class="row">
			<div class="col-sm-6">
				<h1>Iniciar sessão</h1>
			</div>
		</div>
	</div>
</section>

<section id="portfolio" class="container">
	<div class="row">
		<div class="col-md-12 col-md-offset-5 form-login">
			<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
				<div class="field ">
					<p><b>Email</b></p>
					<%= f.email_field :email, autofocus: true, class: "form-control"%>
				</div>
				<div class="field">
					<p><b>Senha</b></p>
					<%= f.password_field :password, autocomplete: "off", class: "form-control" %>
				</div>
				<% if devise_mapping.rememberable? -%>
					<div class="field">
						<%= f.check_box :remember_me %>
						<%= f.label "Guardar minhas informações" %>
					</div>
				<% end -%>
				<div class="actions">
					<%= f.submit "Acessar", class: "btn btn-default", style: "float:left" %>
					<%= link_to "Nova ONG", new_registration_path(resource_name), class: "btn btn-primary", style: "float:right" %>
				</div>
			<% end %>
		</div>
	</div>
</section>